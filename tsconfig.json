{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build/js",
    "rootDir": "./src/js",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/js/**/*"]
}